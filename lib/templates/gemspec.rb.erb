  s.name          = '<%= @metadata[:name] %>'
  s.version       = '<%= @metadata[:version] %>'
  s.platform      = Gem::Platform::RUBY
  s.authors       = <%= @metadata[:authors].to_s.gsub('"','') %>
  s.email         = '<%= @metadata[:email] %>'
  s.homepage      = '<%= @metadata[:url] %>'
  s.summary       = '<%= @metadata[:summary] %>'
