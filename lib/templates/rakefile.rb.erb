# frozen_string_literal: true

<%= render 'copyright_snippet.rb' %>

require 'rake/testtask'
require 'rdoc/task'

Rake::TestTask.new do |t|
  t.libs << 'test'
end

RDoc::Task.new :rdoc do |rdoc|
  rdoc.main = 'README.md'
  rdoc.rdoc_files.include('README.md',
                          './lib/*.rb',
                          './lib/**/*.rb',
                          './test/**/*.rb')
  rdoc.title = '<%= @metadata[:name] %> Documentation'
  rdoc.rdoc_dir = 'docs/'
  rdoc.options << '--all'
end
